<%= stylesheet_link_tag 'login', media: 'all', 'data-turbolinks-track': 'reload' %>
<div class="main-container">
  <div class="info-container">
    <p class="info-text">EUROWIZJA 2024!!!!!</p>
  </div>
  <div class="login-form-container">
    <%= form_with(url: sessions_path, method: "post", local: true, html: { class: 'login-form' }, id: 'login-form') do |form| %>
      <div class="login-form-group">
        <%= label_tag 'session[nick]', "Nazwa użytkownika", class: 'login-label' %>
        <%= text_field_tag 'session[nick]', nil, class: 'login-input', required: true %>
      </div>
      <%= submit_tag "Zaloguj", class: 'login-submit' %>
    <% end %>
  </div>
</div>

<script>
  document.getElementById('login-form').addEventListener('submit', function(event) {
    var nick = document.querySelector('.login-input').value;
    if (!nick) {
      event.preventDefault();
      alert('Nazwa użytkownika jest wymagana');
    }
  });
</script>